print("Welcome to Treasure Island.")
print("Your mission is to find the treasure.")
left_right = input("Do you want to take the boat right or left? ")
if left_right == "left":
    swim_wait = input("Do you want to swim or wait? ")
    if swim_wait == "wait":
        door = input("Which door you want to take? ")
        if door == "yellow":
            print("You win!")
        elif door == "red":
            print("Burned by fire. Game Over.")
        elif door == "blue":
            print("Eaten by beats. Game Over")
        else:
            print("Game Over!")
    elif swim_wait == "swim":
        print("Attacked by trout. Game Over")
    else:
        print("You selected invalid option")
elif left_right == "right":
    print("Fall into a hole. Game Over.")
else:
    print("You selected invalid options")



